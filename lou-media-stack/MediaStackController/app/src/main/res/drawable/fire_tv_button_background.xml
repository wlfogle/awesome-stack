<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/fire_tv_accent"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/fire_tv_secondary"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/fire_tv_surface"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/white_alpha_20"/>
        </shape>
    </item>
</selector>
