{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@db/*": ["./db/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"],
      "@plex/*": ["./plex/*"],
      "@shared/*": ["./shared/*"],
      "@data/*": ["./data/*"],
      "@schemas/*": ["./schemas/*"],
      "@services/*": ["./services/*"],
      "@/*": ["./client/*"],
      "@commitlint/types": ["./node_modules/@commitlint/types"]
    }
  },
  "include": ["src/**/*", "config"],
  "exclude": ["src/client/**/*"]
}
