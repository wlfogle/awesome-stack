# Lou Media Stack Configuration
# Copy this file to .env and update the values

# System Configuration
PUID=1000
PGID=1000
TZ=America/New_York

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=your-email@example.com

# Directory Configuration
MEDIA_ROOT=/home/lou/media
DOWNLOADS_ROOT=/home/lou/downloads

# Database Configuration
POSTGRES_DB=mediastack
POSTGRES_USER=mediastack
POSTGRES_PASSWORD=secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_here

# VPN Configuration (Update with your VPN provider details)
VPN_PROVIDER=mullvad
VPN_TYPE=wireguard
VPN_PRIVATE_KEY=your_wireguard_private_key_here
VPN_ADDRESSES=10.64.0.1/32
VPN_COUNTRIES=United States

# WireGuard Server Configuration
WIREGUARD_SERVERURL=your.domain.com
WIREGUARD_SERVERPORT=51820
WIREGUARD_PEERS=5

# Plex Configuration
PLEX_CLAIM=claim-your_plex_claim_token_here

# *arr API Keys (Generated after first run)
SONARR_API_KEY=your_sonarr_api_key_here
RADARR_API_KEY=your_radarr_api_key_here
LIDARR_API_KEY=your_lidarr_api_key_here
READARR_API_KEY=your_readarr_api_key_here

# Notification Configuration
WATCHTOWER_NOTIFICATION_URL=discord://webhook_url_here

# Optional: Advanced Configuration
DELUGE_DAEMON_PORT=58846
DELUGE_WEB_PORT=8112
JACKETT_AUTO_UPDATE=true

# ==============================================================================
# ENHANCED SERVICES CONFIGURATION
# ==============================================================================

# Weather Service Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_LOCATION=New Albany, IN
# Get your API key from: https://openweathermap.org/api

# AI Search Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys

# Live TV & IPTV Configuration
HDHOMERUN_IP=192.168.1.100
TVPASS_USERNAME=your_tvpass_username_here
TVPASS_PASSWORD=your_tvpass_password_here

# Plex Token (for PseudoTV integration)
PLEX_TOKEN=your_plex_api_token_here

# PseudoTV Configuration
PSEUDOTV_ENABLED=true
PSEUDOTV_JELLYFIN_INTEGRATION=true
PSEUDOTV_PLEX_INTEGRATION=true

# EPG Configuration
UNIFIED_EPG_ENABLED=true
EPG_DAYS=7
EPG_UPDATE_INTERVAL=6

# Authentication Keys
AUTHENTIK_SECRET_KEY=your_authentik_secret_key_here
VAULTWARDEN_ADMIN_TOKEN=your_vaultwarden_admin_token_here
GRAFANA_PASSWORD=your_grafana_password_here

# Network Configuration
TAILSCALE_AUTH_KEY=your_tailscale_auth_key_here

# Jellyfin API Key (for integrations)
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# ==============================================================================
# GRANDMOTHER DASHBOARD CONFIGURATION
# ==============================================================================

# Dashboard Features
GRANDMA_WEATHER_ENABLED=true
GRANDMA_AI_SEARCH_ENABLED=true
GRANDMA_TV_GUIDE_ENABLED=true
GRANDMA_PSEUDOTV_ENABLED=true
GRANDMA_RECORDING_ENABLED=true

# Interface Settings
GRANDMA_LARGE_BUTTONS=true
GRANDMA_SIMPLE_MODE=true
GRANDMA_AUTO_REFRESH=300

# Security Note: Keep this file private and never commit it to version control
