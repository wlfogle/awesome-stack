<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="48dp"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎬 Grandma's Media Center"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting up..."
        android:textSize="24sp"
        android:textColor="#cccccc"
        android:layout_marginBottom="48dp"
        android:gravity="center" />

    <!-- Main Buttons Grid -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:orientation="horizontal">

        <!-- Dashboard Button -->
        <Button
            android:id="@+id/dashboardButton"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:text="🔍 Search &amp; Find\nMovies &amp; Shows"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:background="@drawable/tv_button_primary"
            android:focusable="true"
            android:nextFocusRight="@+id/mediaButton"
            android:nextFocusDown="@+id/liveTvButton" />

        <!-- Media Library Button -->
        <Button
            android:id="@+id/mediaButton"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:text="📺 Watch\nYour Library"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:background="@drawable/tv_button_secondary"
            android:focusable="true"
            android:nextFocusLeft="@+id/dashboardButton"
            android:nextFocusDown="@+id/settingsButton" />

        <!-- Live TV Button -->
        <Button
            android:id="@+id/liveTvButton"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:text="📡 Live TV\n&amp; Recording"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:background="@drawable/tv_button_accent"
            android:focusable="true"
            android:nextFocusRight="@+id/settingsButton"
            android:nextFocusUp="@+id/dashboardButton" />

        <!-- Settings Button -->
        <Button
            android:id="@+id/settingsButton"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"
            android:text="⚙️ Settings\n&amp; Help"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:background="@drawable/tv_button_neutral"
            android:focusable="true"
            android:nextFocusLeft="@+id/liveTvButton"
            android:nextFocusUp="@+id/mediaButton" />

    </GridLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use your remote's arrow keys to navigate • Press OK/Select to choose"
        android:textSize="18sp"
        android:textColor="#888888"
        android:layout_marginTop="48dp"
        android:gravity="center" />

</LinearLayout>
